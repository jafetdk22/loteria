<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - loteria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/loteria.styles.css" asp-append-version="true" />
    <style>
        body, .navbar {
            background-color: #2E3440;
        }

        .nav-color-link:hover {
            border-radius: 10%;
            background-color: #434C5E;
        }

        .card, .card-header, .card-body {
            border-color: #4C566A;
        }

        .sinfondo {
            background: none !important;
        }

        .fondoMatiz {
            background-color: #3B4252;
        }
        ::-webkit-scrollbar {
            width: 10px; 
        }

        ::-webkit-scrollbar-track {
            background-color: #f5f5f5; 
        }

        ::-webkit-scrollbar-thumb {
            background-color: #888; 
            border-radius: 5px; 
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: #555; 
            }

        .cantidadTab {
            background-color: transparent; 
            border-color: #006BEA; 
            color: white; 
        }

            .cantidadTab:focus {
                background-color: transparent; 
                box-shadow: none;
                color: white;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LOTERIA MEXICANA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light nav-color-link" asp-area="" asp-controller="Cartas" asp-action="Index">Cartas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light nav-color-link" asp-area="" asp-controller="Tableros" asp-action="Index">Tableros</a>
                        </li>

                    </ul>
                    <!--<div><img src="~/Imagenes/imagen_1.jpg" width="120px" height="160px" /></div>-->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="box-shadow footer text-muted">
        <div class="container">
            &copy; 2023 - loteria - <a asp-area="" asp-controller="" asp-action="">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>